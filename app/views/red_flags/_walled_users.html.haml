- users.each do |user|
  %li
    =user.email
    %br
    -if current_user == user
      You have received a red flag
    -elsif current_user.has_raised_flag_against(user)
      You have red flagged this user |
      = button_to "Lower Flag", lower_flag_path(id: user.id), remote: true
    -elsif current_user.has_voted_in_defence_of(user)
      You have voted in support of this user |
      = button_to "Remove Support", remove_support_path(id: user.id), remote: true
    -else
      VOTE:
      = button_to "NOT an investor", raise_flag_path(id: user.id), remote: true
      |
      = button_to "IS an investor", support_user_path(id: user.id), remote: true
    %br
    Vote Balance:
    - if user.votes_at_manual_reset
      =(user.red_flag_balance - user.votes_at_manual_reset)
    -else
      = user.red_flag_balance
    %br
    - if can? :admin_vote_reset, user
      = button_to "Administrator vote reset", admin_vote_reset_path(id: user.id), remote: true