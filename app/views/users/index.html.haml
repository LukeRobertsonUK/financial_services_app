%h1 List of Users
%h3 current user will come here to search for new friends

%ul
  - @visible_users.each do |user|
    %li
      =user.email
      =user.business
      - if user.business == "Investor"
        -if current_user.has_raised_flag_against(user)
          (You have red-flagged this user as not an investor.
          = button_to "lower flag", lower_flag_user_path(user)
          )
        -else
          (Not an investor?
          = button_to "raise red flag", raise_flag_user_path(user)
          )
      -unless current_user.exceeds_black_ball_limit?
        = link_to "Befriend", new_friendship_path(proposee_id: user.id)