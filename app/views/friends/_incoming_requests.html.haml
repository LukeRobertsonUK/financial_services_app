-unless @incoming_friend_requests.blank?
  %h3 Incoming friend requests
  %ul
    - @incoming_friend_requests.each do |friendship|
      %li
        =friendship.proposer.email
        = link_to "accept friendship", edit_friendship_path(friendship), remote: true
        = link_to "deny friendship", friendship, method: :delete, data: { confirm: 'Are you sure you want to deny this request?' }, remote: true
        = link_to "deny with blackball", friendship_path(friendship, black_ball: true), method: :delete, data: { confirm: 'Are you sure you want to Blackball this user?' }, remote: true