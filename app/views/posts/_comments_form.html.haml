= form_for(@comment, remote: true) do |f|
  =f.hidden_field :user_id, {value: current_user.id}
  =f.hidden_field :post_id, {value: @post.id}
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.check_box :visible_poster_only
    = f.label :visible_poster_only
  .actions
    = f.submit