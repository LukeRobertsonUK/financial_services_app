<h1>Listing posts</h1>

<table>
  <tr>
    <th>Sharing pref</th>
    <th>User</th>
    <th>Colleague visible</th>
    <th>Non investor visible</th>
    <th>Title</th>
    <th>Content</th>
    <th>Post file</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.sharing_pref %></td>
    <td><%= post.user %></td>
    <td><%= post.colleague_visible %></td>
    <td><%= post.non_investor_visible %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.post_file %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

