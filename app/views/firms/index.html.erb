<h1>Listing firms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Corporate disclaimer</th>
    <th>Building</th>
    <th>Street address</th>
    <th>Postcode</th>
    <th>Country</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @firms.each do |firm| %>
  <tr>
    <td><%= firm.name %></td>
    <td><%= firm.website %></td>
    <td><%= firm.corporate_disclaimer %></td>
    <td><%= firm.building %></td>
    <td><%= firm.street_address %></td>
    <td><%= firm.postcode %></td>
    <td><%= firm.country %></td>
    <td><%= firm.latitude %></td>
    <td><%= firm.longitude %></td>
    <td><%= link_to 'Show', firm %></td>
    <td><%= link_to 'Edit', edit_firm_path(firm) %></td>
    <td><%= link_to 'Destroy', firm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

